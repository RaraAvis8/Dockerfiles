version: "3"
services:

  koel:
    image: etopian/docker-koel
    volumes:
      - "/music:/DATA/music"
    ports:
      - "5555:80"
    depends_on:
      - db
    environment:
      - DB_HOST=db
      - DB_DATABASE=koeldb
      - DB_USERNAME=koel
      - DB_PASSWORD=koel
      - ADMIN_EMAIL=rara@test.com
      - ADMIN_NAME=rara
      - ADMIN_PASSWORD=rara
      - AP_ENV=production
      - APP_DEBUG=false

  db:
    image: mariadb
    environment:
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=koeldb
      - MYSQL_USER=koel
      - MYSQL_PASSWORD=koel

